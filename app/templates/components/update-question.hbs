{{#if updateForm}}
<h1> Update {{question.author}}'s question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="query">Question?</label>
      {{input class="form-control" value=query id="query"}}
    </div>
    <div class="form-group">
      <label for="note">Any additional info?</label>
      {{input class="form-control" value=note id="note"}}
    </div>
    <button class="btn btn-danger" {{action "update" question}}>Save Update</button>
  </form>
</div>
{{else}}
<button class="btn btn-danger" {{action "updateForm"}}>Update</button>
{{/if}}
