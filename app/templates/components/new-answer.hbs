{{#if addNewAnswer}}
<h1>New Answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="username">Comment Author</label>
      {{input value=username id="username" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="content">Answer</label>
      {{input value=content id="content" class="form-control"}}
    </div>
    <button {{action "saveAnswer"}} class="btn btn-success">Save</button>
  </form>
</div>
{{else}}
  <button {{action "answerFormShow"}} class="btn btn-primary">New Answer</button>
{{/if}}
